<!-- This is a silo definition file for cmdserver.exe -->

<container>
    <namespace>
        <registry>
            <hivestack hive="software"/>
            <hivestack hive="system"/>
            <hivestack hive="sam"/>
            <hivestack hive="security"/>
            <hivestack hive="defaultuser"/>
            <hivestack hive="machine"/>

            <RedirectionNode
                ContainerPath="\Registry\MACHINE"
                hivestack="machine"
                access_mask="0xffffffff"
                />

            <!-- Bleed the entire namespace through. -->
            <RedirectionNode
                ContainerPath="\Registry\MACHINE\Hardware"
                HostPath="\Registry\MACHINE\Hardware"
                access_mask="0x83020019"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="\Registry\MACHINE\SOFTWARE"
                HostPath="\Registry\MACHINE\SOFTWARE"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="\Registry\MACHINE\SYSTEM"
                HostPath="\Registry\MACHINE\SYSTEM"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="\Registry\MACHINE\SAM"
                HostPath="\Registry\MACHINE\SAM"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="\Registry\MACHINE\Security"
                HostPath="\Registry\MACHINE\Security"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="\Registry\USER"
                HostPath="\Registry\USER"
                access_mask="0xffffffff"
                />

            <!-- Redirect the hives DISM expects to operate on. -->
            <RedirectionNode
                ContainerPath="SOFTWARE"
                hivestack="software"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="SYSTEM"
                hivestack="system"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="SAM"
                hivestack="sam"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="SECURITY"
                hivestack="security"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

            <RedirectionNode
                ContainerPath="DEFAULT"
                hivestack="defaultuser"
                access_mask="0xffffffff"
                TrustedHive="true"
                />

        </registry>
    </namespace>
</container>
